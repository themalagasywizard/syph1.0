{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "target": "ESNext",
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}